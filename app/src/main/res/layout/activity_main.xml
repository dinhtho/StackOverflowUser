<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.main.MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/main_ll_option"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:id="@+id/main_tv_all"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/red"
                android:textSize="17dp"
                android:text="All"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/main_tv_bookmark"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/red"
                android:textSize="17dp"
                android:text="Bookmark"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/main_ll_option"
            android:layout_above="@+id/main_progressBar_bottom"
            android:id="@+id/main_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ProgressBar
            android:layout_marginTop="50dp"
            android:visibility="gone"
            android:id="@+id/main_progressBar_bottom"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    <ProgressBar
            android:visibility="gone"
            android:id="@+id/main_progressBar"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


</RelativeLayout>
