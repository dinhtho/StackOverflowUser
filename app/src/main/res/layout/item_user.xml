<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:id="@+id/item_user_cl_root"
    android:layout_height="65dp">

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/item_user_iv_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:text="Name"
                android:textColor="@color/black"
                android:id="@+id/item_user_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/reputation"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="123456"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp"
                    android:textColor="@color/grey"
                    android:id="@+id/item_user_tv_reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/location"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="location"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp"
                    android:textColor="@color/grey"
                    android:id="@+id/item_user_tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/item_user_tv_last_access_date"
        android:text="13 mins"
        android:textSize="11dp"
        android:textColor="@color/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="@color/grey"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:src="@drawable/ic_bookmark"
        android:id="@+id/item_user_iv_bookmark"
        android:layout_width="70dp"
        android:layout_height="match_parent"/>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>