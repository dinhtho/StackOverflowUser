<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/item_user_rl_root"
                android:layout_height="65dp">
    <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/item_user_iv_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

        <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="14dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:id="@+id/item_user_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/reputation"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="123456"
                        android:layout_marginLeft="5dp"
                        android:textSize="11dp"
                        android:textColor="@color/grey"
                        android:id="@+id/item_user_tv_reputation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/location"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="location"
                        android:layout_marginLeft="5dp"
                        android:textSize="11dp"
                        android:textColor="@color/grey"
                        android:id="@+id/item_user_tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/item_user_tv_last_access_date"
            android:layout_alignParentRight="true"
            android:text="13 mins"
            android:textSize="11dp"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:tint="@color/grey"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_bookmark"
            android:id="@+id/item_user_iv_bookmark"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

</RelativeLayout>